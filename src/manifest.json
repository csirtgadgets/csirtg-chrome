{
  "manifest_version": 2,
  "name": "CSIRTG",
  "short_name": "CSIRTG",
  "description": "Chrome extension for CSIRTG",
  "version": "1.2",

  "background": {
    "scripts": [
      "js/menu.js"
    ]
  },
  "options_page": "html/options.html",
  //required
  "browser_action": {
    "default_popup": "html/submit.html"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/ https://maxcdn.bootstrapcdn.com/bootstrap/ https://csirtg.io; object-src 'self'",
  "omnibox": { "keyword": "cg" }
}
